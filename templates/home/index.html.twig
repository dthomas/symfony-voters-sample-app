{% extends 'base.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .flash-notice { margin: 1em auto; background: #234567; color: #FF0077; padding: 1rem; }
    .flash-notice::before {
        content: "❌";
    }
    .flash-success { margin: 1em auto; background: #234567; color: #00FF77; padding: 1rem; }
    .flash-success::before {
        content: "✅";
    }

</style>

<div class="example-wrapper">
    {{ include("partials/_links.html.twig") }}
    {{ include("partials/_flash.html.twig") }}

    {% if orders %}
    <ul>
    {% for order in orders %}
        <li><a href="{{ path('approve', {id: order.id}) }}">{{ order.title }}</a></li>
    {% endfor %}
    </ul>
    {% endif %}
</div>
{% endblock %}
